---
import { Image } from "astro:assets";
import Expertise from "./Expertise.astro";

const { agileApproach, expertise } = Astro.props;
const { header, button, steps } = agileApproach;
---

<section
  class='bg-black-strom mt-40 py-140 overflow-hidden max-lg:mt-100 max-lg:py-100 max-sm:mt-20 max-sm:py-20'>
  <div
    class='max-w-container-l mx-auto max-xl:mx-20
  max-lg:mx-060 max-md:mx-10 max-sm:mx-5'>
    <div
      class='justify-between flex items-end max-lg:flex-col max-lg:gap-10 max-lg:items-start'>
      <h1
        data-aos='fade-up'
        data-aos-duration='1000'
        class='max-w-585 text-white tracking-tightg my-0 text-64xl font-fraunces font-bold leading-72 max-lg:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44'>
        {header}
      </h1>
      <a
        href={button.buttonLink}
        class='bg-white text-black-strom px-6 py-3 text-base font-medium leading-6 font-satoshi rounded-sm1 max-sm:py-010 max-sm:px-5 hover:bg-chi-white'
        data-aos='fade-up'
        data-aos-duration='2000'
        data-aos-anchor-placement='top-bottom'>{button.buttonText}</a
      >
    </div>
    <div
      class='mt-100 flex relative justify-between items-center max-lg:gap-10 max-xl:flex-col max-lg:mt-20 max-lg:static max-sm:mt-060'>
      <div
        class='w-610 max-xl:w-full'
        data-aos='fade-up'
        data-aos-duration='1000'>
        {
          steps.map((approach: any) => {
            return (
              <div class='cursor-pointer border-t border-t-raisin-black justify-between items-center flex py-30 max-sm:pt-5 hover:scale-95 ease-in duration-150 group'>
                <div class='w-465 gap-10 flex justify-between max-lg:w-4/5 max-md:w-90% max-sm:w-4/5 max-sm:gap-4 max-sm:flex-col'>
                  <h1 class='text-white tracking-tighth mx-0 text-26xl leading-34 font-bold font-fraunces max-lg:text-2xl max-lg:leading-8 max-sm:text-22xl max-sm:leading-30'>
                    {approach.name}
                  </h1>
                  <div class='max-w-280 text-base font-normal font-inter leading-6 text-spanish-gray max-sm:text-sm max-sm:leadind-5 group-hover:text-white'>
                    {approach.description}
                  </div>
                </div>
                <div class='w-10 h-10 bg-raisin-black rounded-sm5 justify-center items-center flex flex-grow-0 flex-shrink basis-auto max-sm:w-9 max-sm:h-9 group-hover:invert ease-linear duration-100 delay-150'>
                  <Image
                    alt={"arrow"}
                    src='/image/arrow.svg'
                    class='max-sm:w-4 group-hover:rotate-45 ease-linear duration-100 delay-150'
                    height={20}
                    width={20}
                  />
                </div>
              </div>
            );
          })
        }
      </div>
      <div
        class='absolute left-auto top-05 -right-08 bottom-0% max-xl:static'
        data-aos='fade-up'
        data-aos-duration='1500'>
        <Image
          src='/image/content1.svg'
          alt={"content1"}
          height={600}
          width={600}
        />
      </div>
    </div>
  </div>
  <Expertise expertise={expertise} />
</section>
