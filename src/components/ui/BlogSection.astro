---
import { Image } from "astro:assets";
import ThreeBlogsView from "./ThreeBlogsView.astro";
const { blogs, BlogPage } = Astro.props;
const Form = await getEntryBySlug("contact", "form");
const { accessKey } = Form.data;
import NewsLetterForm from "../functional/NewsLetterForm";
import { getEntryBySlug } from "astro:content";
---

<section class='mt-160 max-lg:mt-100 max-sm:mt-20'>
  <div
    class='max-w-container-l mx-auto
  max-lg:mx-060 max-md:mx-10 max-sm:mx-5'>
    <div class='max-w-732 mx-auto' data-aos='fade-up' data-aos-duration='1500'>
      <h1
        class='text-center text-black-strom tracking-tightg my-0 text-64xl font-bold font-fraunces leading-72 max-lg:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44'>
        {BlogPage.indexPageHeader}
      </h1>
    </div>
    <div
      class='mt-16 flex gap-8 max-lg:flex-col max-xl:gap-010 max-lg:mt-060 max-lg:gap-5 max-sm:mt-10'>
      <ThreeBlogsView blogs={blogs.slice(0, 3)} />
      <div
        class='w-365 bg-black-strom rounded-xl py-10 px-11 max-lg:w-full max-lg:px-100 max-md:px-060 max-sm:py-7 max-sm:px-30'
        data-aos='fade-up'
        data-aos-duration='1000'>
        <div>
          <h1
            class='text-white text-center my-0 text-4xl font-semibold font-fraunces leading-10 max-sm:text-28xl max-sm:leading-34'>
            Subscribe Our Newsletter
          </h1>
          <div
            class='text-white text-center text-lg font-normal font-inter mt-4 leading-7 max-sm:text-base max-sm:leading-5'>
            Sign and get swept deal on performance bas creatives that
          </div>
          <div class='flex mt-5 items-center justify-center max-sm:mt-010'>
            <Image
              src='/image/blog-arrow.svg'
              alt={"BlogArrow"}
              height={70}
              width={70}
            />
          </div>
        </div>
        <div class='mt-27 max-sm:mt-5'>
          <div class='mb-0'>
            <NewsLetterForm client:load accessKey={accessKey} />
          </div>
        </div>
      </div>
      <ThreeBlogsView blogs={blogs.slice(3, 6)} />
    </div>
  </div>
</section>
