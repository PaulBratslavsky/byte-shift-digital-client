---
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
const Ctabanner = await getEntry("footer", "ctabanner");
const { header, description, button, image, backgroundImage } = Ctabanner?.data;
---

<section
  class='mt-160 py-20 bg-no-repeat max-lg:mt-100 max-sm:mt-20 max-sm:py-060'
  style=`background-image: url(${backgroundImage});`
  data-aos='fade-up'
  data-aos-duration='1500'
  style='background-position: 50%;'>
  <div
    class='max-w-container-l justify-between mx-auto flex items-center max-lg:gap-10 max-lg:flex-col max-lg:mx-060 max-lg:items-start max-md:mx-10 max-sm:mx-5 max-sm:gap-5 max-xl:mx-20'>
    <div>
      <h1
        class='max-w-640 text-black-strom tracking-tightg mt-0 text-68xl font-bold font-fraunces leading-76 max-lg:text-6xl max-lg:leading-68 max-md:text-52xl max-md:leading-60 max-sm:text-44xl max-sm:leading-52'>
        {header}
      </h1>
      <div
        class='mt-6 text-lg font-normal max-w-500 text-black-strom leading-7 font-inter max-sm:mt-5 max-sm:text-base max-sm:leading-5'>
        {description}
      </div>
      <div class='mt-10 max-sm:mt-5'>
        <a
          href={button.link}
          class='text-white bg-black-strom py-3 px-6 text-base leading-6 font-medium rounded-sm1 max-sm:py-010 max-sm:px-5 hover:bg-chi-black'
          >{button.text}</a
        >
      </div>
    </div>
    <div class='w-500 max-lg:w-full'>
      <Image
        src={image}
        class='w-full object-cover'
        alt={"BannerFooter"}
        width={500}
        height={500}
      />
    </div>
  </div>
</section>
<!-- cta section End -->
