---
const { expertise } = Astro.props;
const { header, expertiseList, link } = expertise;
---

<div
  class='max-w-container-05xl mt-160 mx-auto max-lg:mt-100 max-xl:mx-20 max-lg:mx-060 max-md:max-10 max-sm:mx-5 max-sm:mt-20'>
  <h1
    data-aos='fade-up'
    data-aos-duration='1000'
    class='max-w-800 text-white text-center mx-auto tracking-tighth text-5xl leading-56 font-bold font-fraunces max-lg:text-46xl max-lg:leading-54 max-md:text-40xl max-md:leading-48 max-sm:text-32xl max-sm:leading-10'>
    {header}
  </h1>
  <div class='mt-12 max-sm:mt-10' data-aos='fade-up' data-aos-duration='1500'>
    <div
      class='gap-4 justify-center flex flex-wrap max-lg:gap-4 max-lg:grid max-lg:grid-cols-3 auto-cols-auto max-sm:grid-cols-2'>
      {
        expertiseList.map((exp: string) => {
          return (
            <div class='bg-raisin-black rounded-sm5 px-26 py-3 max-lg:gap-4 max-lg:justify-center max-lg:flex max-lg:items-center max-lg:px-5 max-sm:py-010 max-sm:px-4'>
              <div class='text-spanish-gray text-lg font-medium font-inter leading-7 max-lg:text-base max-lg:text-center max-lg:leading-5'>
                {exp}
              </div>
            </div>
          );
        })
      }
    </div>

    <a href={link.href} class='block max-w-full'>
      <div
        class='mt-12 max-sm:mt-10 text-white text-lg font-inter leading-7 underline font-semibold text-center'>
        {link.text}
      </div>
    </a>
  </div>
</div>
