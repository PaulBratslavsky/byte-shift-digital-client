---
import { Image } from "astro:assets";
const { banner } = Astro.props;
---

<section class='mt-072 max-lg:mt-100 max-md:mt-20 max-sm:mt-060'>
  <div
    class='max-w-container-1xl mx-auto px-5 flex items-center justify-between max-lg:flex-col max-lg:gap-5 max-lg:mx-060 max-md:mx-10 max-lg:items-start max-lg:px-0 max-sm:mx-5'>
    <div class='flex-grow flex-shrink basis-0%'>
      <h1
        class='max-w-520 text-black-strom my-0 font-bold text-68xl font-fraunces leading-76 tracking-tightg max-lg:text-6xl max-lg:leading-68 max-md:text-52xl max-md:leading-60 max-sm:text-44xl max-sm:leading-52'
        data-aos='fade-up'
        data-aos-duration='1000'>
        {banner.heading}
      </h1>
      <div
        class='mt-6 max-sm:mt-5 text-black-strom max-w-sm leading-7 text-lg font-normal font-inter'
        data-aos='fade-up'
        data-aos-duration='2500'>
        {banner.description}
      </div>
      <div
        class='mt-10 max-sm:mt-5'
        data-aos='fade-up'
        data-aos-duration='2000'
        data-aos-anchor-placement='top-bottom'>
        <a
          href={banner.button.buttonLink}
          class='text-white bg-black-strom py-3 px-6 text-base leading-6 font-medium font-satoshi rounded-sm1 max-sm:py-010 max-sm:px-5 hover:bg-chi-black'
          >{banner.button.buttonText}</a
        >
      </div>
    </div>
    <div
      class='flex-grow flex-shrink basis-0%'
      data-aos='fade-up'
      data-aos-duration='1000'>
      <Image
        src={banner.image}
        class='w-636 max-lg:w-full'
        alt='banner'
        width={636}
        height={636}
      />
    </div>
  </div>
</section>
