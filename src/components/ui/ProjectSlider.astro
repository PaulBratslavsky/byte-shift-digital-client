---
import Projects from "../functional/Projects";
const { projects, projectHeader } = Astro.props;
---

<section class="mt-160 relative max-lg:mt-100 max-sm:mt-20 overflow-hidden">
  <div
    class="max-w-container-l mx-auto max-xl:mx-20 max-lg:mx-060 max-md:mx-10 max-sm:mx-5 max-sm:max-w-none"
  >
    <div>
      <h1
        data-aos="fade-up"
        data-aos-duration="1500"
        class="max-w-625 text-black-strom tracking-tightg font-fraunces my-0 text-64xl font-bold leading-72 max-lg:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44"
      >
        {projectHeader}
      </h1>
      <div
        class="mt-10 max-lg:mt-060 max-sm:mt-10 bg-transparent h-auto clear-both text-center relative md:mr-calc"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <Projects client:load projects={projects} />
      </div>
    </div>
  </div>
</section>
