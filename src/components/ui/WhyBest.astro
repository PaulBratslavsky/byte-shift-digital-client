---
import { Image } from "astro:assets";

const { whyBest } = Astro.props;
const { header, points } = whyBest;
---

<section class='mt-160 max-lg:mt-100 max-sm:mt-20'>
  <div
    class='max-w-container-l mx-auto max-xl:mx-20
  max-lg:mx-060 max-md:mx-10 max-sm:mx-5'>
    <h1
      data-aos='fade-up'
      data-aos-duration='1500'
      class='max-w-732 text-center mx-auto text-64xl leading-72 font-bold font-fraunces tracking-tightg max-md:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44'>
      {header}
    </h1>
    <div
      class='mt-16 flex justify-between max-lg:grid max-lg:gap-10 max-lg:grid-cols-2 max-lg:mt-060 max-sm:grid-cols-1 max-sm:mt-10'>
      {
        points.map((data: any) => {
          return (
            <div data-aos='fade-up' data-aos-duration='1000'>
              <div class='gap-4 items-center flex max-sm:gap-07'>
                <Image
                  src={data.numberImage}
                  alt={"number"}
                  height={35}
                  width={35}
                />
                <h1 class='text-black-strom tracking-tighth my-0 leading-34 text-26xl font-bold font-fraunces max-lg:text-2xl max-lg:leading-8'>
                  {data.title}
                </h1>
              </div>
              <div class='mt-8 max-md:mt-30 max-sm:mt-5'>
                <Image
                  src={data.image}
                  class='w-150'
                  alt={"Point"}
                  height={150}
                  width={150}
                />
              </div>
              <div class='max-w-228 mt-6 text-black-strom text-lg leading-7 font-normal font-inter max-lg:max-w-95% max-sm:mt-5'>
                {data.description}
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
