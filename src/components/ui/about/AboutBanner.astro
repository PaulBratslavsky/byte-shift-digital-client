---
import { Image } from "astro:assets";

const { AboutSection } = Astro.props;
const { header, button, image } = AboutSection.data;
---

<section class='mt-100 max-md:mt-20 max-sm:mt-060'>
  <div
    class='max-w-935 mx-auto max-xl:mx-20 max-lg:mx-060 max-md:mx-10 max-sm:mx-5'>
    <h1
      data-aos='fade-up'
      data-aos-duration='1500'
      class='max-w-732 text-center mx-auto text-black-strom tracking-tightg my-0 text-68xl leading-76 font-bold font-fraunces max-lg:text-6xl max-lg:leading-68 max-md:text-52xl max-md:leading-60 max-sm:text-44xl max-sm:leading-52'>
      {header}
    </h1>
    <div
      class='flex justify-center mt-10 items-center max-sm:mt-7'
      data-aos='fade-zoom-in'
      data-aos-easing='ease-in-back'
      data-aos-delay='500'
      data-aos-offset='0'>
      <a
        href={button.link}
        class='text-white bg-black-strom rounded-sm1 px-6 py-3 text-base font-medium leading-6 transition-opacity duration-200 max-sm:px-5 max-sm:py-010 hover:bg-chi-black'
        >{button.text}</a
      >
    </div>
    <div class='mt-10 max-sm:mt-5' data-aos='fade-up' data-aos-duration='1500'>
      <Image
        src={image}
        alt={"AboutBanner"}
        height={1000}
        width={1000}
        class={"object-cover"}
      />
    </div>
  </div>
</section>
