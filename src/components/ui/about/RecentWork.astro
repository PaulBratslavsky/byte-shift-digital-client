---
const { globalStats } = Astro.props;
const {
  statsTitle,
  statsDescription,
  operatingCountry,
  satisfiedClients,
  projectSolves,
  awards,
} = globalStats.data;
---

<section class='mt-160 max-lg:mt-100 max-md:mt-20'>
  <div
    class='max-w-container-l mx-auto max-xl:mx-20 border border-black-strom rounded-xl flex justify-between overflow-hidden max-lg:mx-060 max-md:mx-10 max-sm:mx-5 max-lg:flex-col'
    data-aos='fade-up'
    data-aos-duration='1500'>
    <div
      class='p-20 max-lg:p-060 max-md:p-12 max-sm:px-5 max-sm:pt-7 max-sm:pb-10'>
      <h1
        class='max-w-530 text-black-strom tracking-tighthl text-54xl leading-62 font-bold font-fraunces max-lg:text-52xl max-lg:leading-60 max-md:text-44xl max-md:leading-52 max-sm:text-34xl max-sm:leading-42'>
        {statsTitle}
      </h1>
      <div
        class='max-w-460 mt-5 mb-76 text-lg font-normal leading-7 text-black-strom font-inter max-md:mb-10 max-sm:mb-5 max-sm:mt-4 max-sm:text-base max-sm:leading-5'>
        {statsDescription}
      </div>
      <a
        href='/contact'
        class='no-underline inline-block overflow-hidden max-w-full group text-black-strom text-lg font-semibold font-inter max-sm:text-base after:h-px after:w-full after:translate-x-100 after:bg-black-strom after:absolute after:bottom-0 after:-left-[100px] hover:after:translate-x-[30%] after:transition after:duration-500 after:ease-in-out relative'>
        Discover More</a
      >
    </div>
    <div
      class='w-494 gap-0 border-l border-l-black-strom grid-cols-2 auto-cols-fr grid max-lg:w-full max-lg:border-t max-lg:border-t-black-strom max-lg:border-l-0'>
      <div
        class="bg-[url('/image/card3.webp')] bg-auto pt-100 px-10 pb-10 max-lg:flex max-lg:px-060 max-lg:items-center max-lg:justify-center max-lg:flex-col max-sm:px-010 max-sm:py-25">
        <div
          class='text-black-strom text-50xl leading-58 font-bold tracking-tightg font-inter max-sm:text-28xl max-sm:leading-9'>
          {operatingCountry}
        </div>
        <div
          class='text-black-strom tracking-tightxl mt-3 uppercase font-semibold text-sm leading-22 font-inter max-sm:mt-010'>
          Operating country
        </div>
      </div>
      <div
        class="bg-[url('/image/card1.webp')] bg-auto pt-100 px-10 pb-10 border-l border-l-black-strom max-lg:flex max-lg:px-060 max-lg:items-center max-lg:justify-center max-lg:flex-col max-sm:px-010 max-sm:py-25">
        <div
          class='text-black-strom text-50xl leading-58 font-bold tracking-tightg font-inter max-sm:text-28xl max-sm:leading-9'>
          {satisfiedClients}
        </div>
        <div
          class='text-black-strom tracking-tightxl mt-3 uppercase font-semibold text-sm leading-22 font-inter max-sm:mt-010'>
          Satisfied clients
        </div>
      </div>
      <div
        class="bg-[url('/image/about/recent-work-3.webp')] bg-50 object-cover pt-100 px-10 pb-10 border-t border-t-black-strom max-lg:flex max-lg:px-060 max-lg:items-center max-lg:justify-center max-lg:flex-col max-sm:px-010 max-sm:py-25">
        <div
          class='text-black-strom text-50xl leading-58 font-bold tracking-tightg font-inter max-sm:text-28xl max-sm:leading-9'>
          {projectSolves}
        </div>
        <div
          class='text-black-strom tracking-tightxl mt-3 uppercase font-semibold text-sm leading-22 font-inter max-sm:mt-010'>
          Projects solves
        </div>
      </div>
      <div
        class="bg-[url('/image/card2.webp')] bg-auto pt-100 px-10 pb-10 border-t border-t-black-strom border-l border-l-black-strom max-lg:flex max-lg:px-060 max-lg:items-center max-lg:justify-center max-lg:flex-col max-sm:px-010 max-sm:py-25">
        <div
          class='text-black-strom text-50xl leading-58 font-bold tracking-tightg font-inter max-sm:text-28xl max-sm:leading-9'>
          {awards}
        </div>
        <div
          class='text-black-strom tracking-tightxl mt-3 uppercase font-semibold text-sm leading-22 font-inter max-sm:mt-010'>
          Awards
        </div>
      </div>
    </div>
  </div>
</section>
