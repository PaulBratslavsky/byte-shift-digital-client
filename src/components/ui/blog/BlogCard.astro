---
import { Image } from "astro:assets";
import { slug } from "github-slugger";
const { blog } = Astro.props;
---

<a
  href={`/blogs/${slug(blog.data.title)}`}
  aria-label='blog'
  class='w-full no-underline max-w-full inline-block'>
  <div class='border border-black-strom rounded-xl overflow-hidden'>
    <div class='w-full h-250 max-sm:h-150'>
      <Image
        src={blog.data.image}
        class='w-full h-full object-cover'
        height={400}
        width={400}
        alt={"Blog"}
      />
    </div>
    <div
      class='flex-col justify-center px-7 pt-7 pb-6 flex max-sm:mx-0 max-sm:px-5 max-sm:pt-5 max-sm:pb-4'>
      <div
        class="text-black-strom bg-[url('/image/blog-cal.svg')] bg-0 bg-no-repeat bg-auto mt-18 pl-26 text-base font-normal font-inter leading-6">
        {new Date(blog.data.date).toDateString()}
      </div>
      <div
        class='mt-010 text-black-strom text-lg font-medium leading-7 font-inter'>
        {blog.data.title}
      </div>
    </div>
    <div class='mb-7 px-6 max-sm:px-5 max-sm:mb-5'>
      <a
        href={`/blogs/${slug(blog.data.title)}`}
        class='no-underline inline-block overflow-hidden max-w-full group text-black-strom text-lg font-semibold font-inter max-sm:text-base after:h-px after:w-full after:translate-x-100 after:bg-black-strom after:absolute after:bottom-0 after:-left-[100px] hover:after:translate-x-[30%] after:transition after:duration-500 after:ease-in-out relative'>
        Discover More
      </a>
    </div>
  </div>
</a>
