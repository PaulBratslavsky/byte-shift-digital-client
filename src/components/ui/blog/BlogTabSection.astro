---
import BlogCard from "./BlogCard.astro";
const { uniqueCatogories, blogs, BlogPage } = Astro.props;
---

<section class="mt-160 max-lg:mt-100 max-sm:mt-20">
  <div
    class="max-w-container-l mx-auto max-xl:mx-20
    max-lg:mx-060 max-md:mx-10 max-sm:mx-5"
  >
    <div
      class="mb-16 max-lg:mb-060 max-sm:mb-10"
      data-aos="fade-up"
      data-aos-duration="1500"
    >
      <h1
        class="max-w-625 text-black-strom tracking-tightg text-64xl leading-72 font-bold font-fraunces max-lg:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44"
      >
        {BlogPage?.tabSectionHeader}
      </h1>
    </div>
    <div class="relative">
      <nav
        class="flex absolute list-none -top-98 bottom-auto left-auto right-0% max-lg:mb-14 max-lg:relative max-lg:top-auto max-md:mb-10 max-xl:-top-060"
        id="tabs"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        {
          Array.from(uniqueCatogories).map((category: any, index: number) => {
            return (
              <div
                class={`${index === 0 ? "active" : ""} inline-block mr-5 max-md:mr-010`}
              >
                <a
                  href={`#${category}`}
                  class={`tabs text-quick-silver bg-bright-gray rounded-sm1 px-5 py-06 text-base font-medium font-satoshi leading-6 align-top text-left cursor-pointer block relative  max-sm:px-3 max-sm:py-2 max-sm:text-sm max-sm:leading-5 max-sm:inlineblock`}
                >
                  {category}
                </a>
              </div>
            );
          })
        }
      </nav>
    </div>
    <div class="block relative" id="tab-contents">
      {
        Array.from(uniqueCatogories).map((category: any, index: number) => {
          return (
            <div
              class={`hidden relative tab-contents ${index === 0 ? "active" : ""}`}
              id={category}
            >
              <div>
                <div class="gap-8 grid grid-cols-3 max-md:grid-cols-1 max-sm:gap-5">
                  {blogs
                    .filter((blog: any) => blog.data.category === category)
                    .map((blog: any) => {
                      return (
                        <div data-aos="fade-up" data-aos-duration="1000">
                          <BlogCard blog={blog} />
                        </div>
                      );
                    })}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
