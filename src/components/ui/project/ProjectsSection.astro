---
import ProjectCard from "./ProjectCard.astro";
const { Projects, ProjectPage } = Astro.props;
---

<section class='mt-160 max-lg:mt-100 max-sm:mt-20'>
  <div
    class='max-w-container-l mx-auto max-xl:mx-20
  max-lg:mx-060 max-md:mx-10 max-sm:mx-5'>
    <div data-aos='fade-up' data-aos-duration='1500'>
      <h1
        class='max-w-732 text-black-strom text-center mx-auto tracking-tightg text-64xl leading-72 font-bold font-fraunces max-md:text-56xl max-lg:leading-64 max-md:text-5xl max-md:leading-56 max-sm:text-4xl max-sm:leading-44'>
        {ProjectPage?.portfolioHeader}
      </h1>
    </div>
    <div class='mt-16 max-lg:mt-060 max-sm:mt-10'>
      <div>
        <div class='gap-8 grid grid-cols-2 max-lg:grid-cols-1 max-sm:gap-5'>
          {
            Projects.map((project: any) => {
              return (
                <div data-aos='fade-up' data-aos-duration='1500'>
                  <ProjectCard project={project} size='big' />
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
