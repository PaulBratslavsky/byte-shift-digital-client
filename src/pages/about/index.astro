---
import { getEntryBySlug } from "astro:content";
import WhyBest from "src/components/ui/WhyBest.astro";
import AboutBanner from "src/components/ui/about/AboutBanner.astro";
import CareerSection from "src/components/ui/about/CareerSection.astro";
import GallerySection from "src/components/ui/about/GallerySection.astro";
import RecentWork from "src/components/ui/about/RecentWork.astro";
import TeamSection from "src/components/ui/about/TeamSection.astro";
import Layout from "src/layout/Layout.astro";
const AboutSection = await getEntryBySlug("about", "index");
const globalStats = await getEntryBySlug("about", "globalstats");
const gallery = await getEntryBySlug("about", "gallery");
const HomePage = await getEntryBySlug("HomePage", "index");
const { whyBest } = HomePage.data;
const Team = await getEntryBySlug("about", "team");
const Experts = await getEntryBySlug("about", "experts");
---

<Layout title='About'>
  <!-- main content start -->
  <!-- about section start -->
  <AboutBanner AboutSection={AboutSection} />
  <!-- about  section End -->

  <!-- recent-work section start -->
  <RecentWork globalStats={globalStats} />
  <!-- recent-work section end -->

  <!-- gallery section start -->
  <GallerySection gallery={gallery} />
  <!-- gallery section ends -->

  <!-- content-2 section start -->
  <WhyBest whyBest={whyBest} />
  <!-- content-2 section end -->

  <!-- team section start  -->
  <TeamSection Team={Team} />
  <!-- team section end -->

  <!-- career  section start -->
  <CareerSection Experts={Experts} />
  <!-- career section ends -->
  <!-- main content end -->
</Layout>
